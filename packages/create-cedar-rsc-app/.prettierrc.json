{
  "$schema": "http://json.schemastore.org/prettierrc",
  "overrides": [
    {
      "files": ".nvmrc",
      "options": {
        "parser": "yaml"
      }
    },
    {
      "files": "*.js",
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": "*.ts",
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": "package.json",
      "options": {
        "packageJsonIgnoreSortKeys": [
          "dependencies",
          "devDependencies",
          "peerDependencies"
        ]
      }
    }
  ],
  "plugins": [
    "prettier-plugin-curly",
    "prettier-plugin-sh",
    "prettier-plugin-sort-pkgjson"
  ],
  "semi": false
}
